<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_main_activity"
    android:orientation="vertical">


    <TextView
        android:id="@+id/playListMakerTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/ys_display_medium_regular"
        android:text="@string/app_name"
        android:textSize="@dimen/large_font_size"
        android:layout_marginTop="14dp"
        android:layout_marginStart="16dp"
        android:textColor="@color/white"/>

    <Button
        android:id="@+id/searchButton"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:fontFamily="@font/ys_display_medium_regular"
        android:textSize="@dimen/large_font_size"
        android:textAllCaps="false"
        android:text="@string/search"
        android:textColor="@color/font_color_for_buttons_and_icons"
        app:icon="@drawable/search_vector"
        app:iconTint="@color/font_color_for_buttons_and_icons"
        app:iconGravity="textStart"
        app:iconPadding="@dimen/icon_padding"
        app:cornerRadius="@dimen/corner_radius_for_buttons"
        android:backgroundTint="@color/background_button_main_activity"
        android:layout_marginTop="40dp"
        android:layout_marginStart="17dp"
        android:layout_marginEnd="15dp"/>

    <Button
        android:id="@+id/mediaLibraryButton"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:fontFamily="@font/ys_display_medium_regular"
        android:textSize="@dimen/large_font_size"
        android:textAllCaps="false"
        android:text="@string/media_library"
        android:textColor="@color/font_color_for_buttons_and_icons"
        app:icon="@drawable/media_library_vector"
        app:iconTint="@color/font_color_for_buttons_and_icons"
        app:iconGravity="textStart"
        app:iconPadding="@dimen/icon_padding"
        app:cornerRadius="@dimen/corner_radius_for_buttons"
        android:backgroundTint="@color/background_button_main_activity"
        android:layout_marginTop="16dp"
        android:layout_marginStart="17dp"
        android:layout_marginEnd="15dp"/>

    <Button
        android:id="@+id/settingsButton"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:fontFamily="@font/ys_display_medium_regular"
        android:textSize="@dimen/large_font_size"
        android:textAllCaps="false"
        android:text="@string/settings"
        android:textColor="@color/font_color_for_buttons_and_icons"
        app:icon="@drawable/settings_vector"
        app:iconTint="@color/font_color_for_buttons_and_icons"
        app:iconGravity="textStart"
        app:iconPadding="@dimen/icon_padding"
        app:cornerRadius="@dimen/corner_radius_for_buttons"
        android:backgroundTint="@color/background_button_main_activity"
        android:layout_marginTop="16dp"
        android:layout_marginStart="17dp"
        android:layout_marginEnd="15dp"
        android:layout_marginBottom="28dp"/>

</LinearLayout>
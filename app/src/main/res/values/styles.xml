<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="MainActivityButtonStyle" parent="Widget.MaterialComponents.Button.UnelevatedButton">
        <item name="android:layout_weight">@dimen/weight_1</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:textSize">@dimen/large_font_size</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/moderately_black</item>
        <item name="iconTint">@color/moderately_black</item>
        <item name="iconGravity">textStart</item>
        <item name="iconPadding">@dimen/icon_padding</item>
        <item name="cornerRadius">@dimen/corner_radius_for_buttons</item>
        <item name="backgroundTint">@color/white</item>
        <item name="android:layout_marginHorizontal">@dimen/layout_margin_horizontal</item>
    </style>

    <style name="SearchingActivityButtonStyle" parent="Widget.MaterialComponents.Button.UnelevatedButton">
        <item name="backgroundTint">@color/moderately_black</item>
        <item name="cornerRadius">54dp</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="SettingsActivityFrameLayoutButtonStyle">
        <item name="android:minHeight">@dimen/layout_height_for_framelayout</item>
        <item name="android:clickable">true</item>
        <item name="android:focusable">true</item>
    </style>

    <style name="SettingsActivityTextViewStyle">
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:layout_gravity">center_vertical|start</item>
        <item name="android:layout_marginStart">@dimen/margin_start_for_textView</item>
        <item name="android:textSize">@dimen/medium_font_size</item>
    </style>

    <style name="ActivityImageViewStyle">
        <item name="tint">@color/saturated_grey</item>
    </style>

    <style name="ImageViewToolbarStyle">
        <item name="android:layout_marginStart">@dimen/layout_margin_start_imageview_toolbar</item>
        <item name="android:layout_marginTop">@dimen/layout_margin_top_imageview_toolbar</item>
        <item name="android:foreground">?attr/selectableItemBackground</item>
        <item name="tint">@color/moderately_black</item>
    </style>

    <style name="TextViewToolbarStyle">
        <item name="android:layout_marginStart">12dp</item>
        <item name="android:layout_marginTop">@dimen/layout_margin_top_textview_toolbar</item>
        <item name="fontFamily">@font/ys_display_medium</item>
        <item name="android:textSize">@dimen/large_font_size</item>
        <item name="android:textColor">@color/moderately_black</item>
    </style>

    <style name="SettingsActivitySwitchStyle">
        <item name="android:checked">false</item>
    </style>

    <style name="DefaultImageViewStyle">
        <item name="tint">@color/saturated_grey</item>
    </style>

    <style name="TrackListViewStyle">
        <item name="android:textColor">@color/saturated_grey</item>
        <item name="tint">@color/saturated_grey</item>
    </style>

    <style name="ImageViewTrackItemStyle">
        <item name="android:background">@color/white</item>
    </style>

    <style name="SearchingActivityNotFoundMode">
        <item name="android:src">@drawable/not_found_light_mode</item>
    </style>

    <style name="SearchingActivityBadConnectionMode">
        <item name="android:src">@drawable/bad_connection_light_mode</item>
    </style>


    <!--Styles for playlist_screen-->
    <style name="BackArrowPlayListScreenStyle">
        <item name="android:foreground">?attr/selectableItemBackground</item>
        <item name="tint">@color/moderately_black</item>
    </style>

    <style name="TextViewMaxFontPlayListScreenStyle">
        <item name="fontFamily">@font/ys_display_medium</item>
        <item name="android:textSize">@dimen/large_font_size</item>
        <item name="android:textColor">@color/moderately_black</item>
    </style>

    <style name="TextViewMiddleFontPlayListScreenStyle">
        <item name="fontFamily">@font/ys_display_medium</item>
        <item name="android:textSize">@dimen/medium_font_size</item>
        <item name="android:textColor">@color/moderately_black</item>
    </style>

    <style name="TextViewSmallFontPlayListScreenStyle">
        <item name="fontFamily">@font/ys_display_regular</item>
        <item name="android:textSize">@dimen/font_size_13sp</item>
        <item name="android:textColor">@color/saturated_grey</item>
    </style>

    <style name="TextViewSmallRightFontPlayListScreenStyle">
        <item name="fontFamily">@font/ys_display_regular</item>
        <item name="android:textSize">@dimen/font_size_13sp</item>
        <item name="android:textColor">@color/moderately_black</item>
    </style>

    <style name="TextViewDurationInTimeFontPlayListScreenStyle">
        <item name="fontFamily">@font/ys_display_medium</item>
        <item name="android:textSize">@dimen/small_medium_font_size</item>
        <item name="android:textColor">@color/moderately_black</item>
    </style>
    <!--/Styles for playlist_screen-->


    <!--Styles for medialibrary_screen-->

    <style name="MedialibraryTableoutStyle">
        <item name="tabTextColor">@color/moderately_black</item>
        <item name="tabIndicatorColor">@color/moderately_black</item>
        <item name="android:background">@color/white</item>
        <item name="textAllCaps">false</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="MedialibraryToolbarStyle">
        <item name="android:background">@color/white</item>
    </style>

    <!--/Styles for medialibrary_screen-->

    <!--Styles for bottom menu-->
    
    <style name="BottomMenuStyle">
        <item name="android:background">@color/white</item>
        <item name="itemIconTint">@drawable/bottom_menu_icon_color_day_mode</item>
        <item name="itemTextColor">@drawable/bottom_menu_icon_color_day_mode</item>
    </style>
    
    <!--/Styles for bottom menu-->

    <!--Styles for new playlist fragment screen-->
    <style name="EditTextNewPlaylistStyle">
        <item name="android:textColorHint">@color/moderately_black</item>
    </style>

    <style name="NewPlaylistButtonStyle">
        <item name="backgroundTint">@drawable/create_playlist_button_selector</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="TextInputLayoutStyleNewPlaylist" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="android:textColorHint">@color/moderately_black</item>
        <item name="android:textColor">@color/moderately_black</item>
    </style>

    <style name="BackgroundPlayerStyle">
        <item name="android:background">@color/white</item>
    </style>

    <style name="CardViewBackgroundStyle">
        <item name="android:backgroundTint">@color/white</item>
    </style>
    <!--/Styles for new playlist fragment screen-->

    <!--Styles for playlist_bottom_sheet_view-->

    <style name="PlaylistBottomSheetCommonTextViewStyle">
        <item name="android:textColorHint">@color/saturated_grey</item>
        <item name="android:textColor">@color/saturated_grey</item>
    </style>

    <style name="PlaylistBottomSheetModTextViewStyle">
        <item name="android:textColorHint">@color/black</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <!--/Styles for playlist_bottom_sheet_view-->

    <!--PlaylistInfoFragment-->

    <style name="PlaylistInfoCommonTextViewStyle">
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:background">@color/pale_grey</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="PlaylistInfoBoldTextViewStyle">
        <item name="android:fontFamily">@font/ys_display_bold_regular</item>
        <item name="android:textSize">24sp</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="PlaylistInfoBottomSheetTextViewStyle">
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <!--/PlaylistInfoFragment-->

    <style name="MyDialogTheme" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="android:background">@color/white</item>
        <item name="android:textSize">18sp</item>
        <item name="buttonBarPositiveButtonStyle">@style/PositiveButtonStyle</item>
        <!-- Style for negative button -->
        <item name="buttonBarNegativeButtonStyle">@style/NegativeButtonStyle</item>
    </style>

    <style name="PositiveButtonStyle" parent="Widget.AppCompat.Button.ButtonBar.AlertDialog">
        <!-- text color for the button -->
        <item name="android:textColor">@color/soft_blue</item>
        <!-- Background tint for the button -->
        <item name="android:backgroundTint">@color/white</item>
    </style>

    <style name="NegativeButtonStyle" parent="Widget.AppCompat.Button.ButtonBar.AlertDialog">
        <!-- text color for the button -->
        <item name="android:textColor">@color/soft_blue</item>
        <!-- Background tint for the button -->
        <item name="android:backgroundTint">@color/white</item>
    </style>

</resources>